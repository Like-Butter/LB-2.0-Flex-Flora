

/* == UTILITIES ================= */

/* hide elements */
.expiring,
.description table,
.footer__menu .footer__heading,
.surface-pick-up {
	display: none;
}

/* force uppercase */
button *,
.button,
a.navbar-link.header__link,
.rich-text__heading {
	text-transform: uppercase;
}

/* link styles */

.faq-accordion a,
#template-product .shopify-section:nth-child(3) a,
#template-product .shopify-section:nth-child(4) a, 
#template-product .shopify-section:nth-child(5) a,
.product-block .description a {
	color: #fe7446;
 	border-bottom: 1px solid #fe7446;
}


/* == HEADER ================= */

.primary-logo .image-element__wrap img {
	max-width: 45px;
}


.mega-menu__linklist .menu__heading {
	font-size: 14px;
  	text-transform: uppercase;
  	border-bottom: 1px solid #c7d2cc; 
  	padding-bottom: 8px;
	letter-spacing: 1px;
}



/* == APP: Instafeed.js ================= */

/* push wrapper full width */
.product-app--container .one-whole.column {
  	margin: 0;
  	width: 100%;
}








/* == FOOTER ================= */

.footer__block p {
	margin-bottom: 5px;
}

.footer__heading {
	color: #fff;
  	text-transform: uppercase;
}

span.fineprint {}


@media only screen and (max-width: 480px) {
  span.fineprint {

      display: block;
  }
}

/* newsletter form */

.footer__block .newsletter-form.is-responsive {
	display: flex;
    justify-content: space-between;  
    flex-wrap: nowrap; 
}

.footer__block .newsletter-form .field1,
.footer__block .newsletter-form .field2 {
	border: transparent;
}

.footer__block .newsletter-form .field1 {
	flex-grow:1;  
}  

.footer__block .newsletter-form .field2 { } 

.footer__block .newsletter-form {}
.footer__block .newsletter-form .field1 .input {
    border: transparent;
  	border-bottom: 1px solid #ffffff;
  	background: transparent;
  	color: #ffffff;
}

.footer__block .newsletter-form .field1 .input.is-primary-btn-style {
	padding-left: 0;
}

.footer__block .newsletter-form .field2 .button {
	background: #000;
  	text-transform: capitalize;
} 

.footer__block .newsletter-form .input::-webkit-input-placeholder { 
  	color: #fff;
}
.footer__block .newsletter-form .input:-ms-input-placeholder { 
  	color: #fff;
}
.footer__block .newsletter-form .input::placeholder {
  	color: #fff;
}


